{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": false,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "build",
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ES2020",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "strictNullChecks": true,
        "strictBindCallApply": true
    },
    "exclude": ["node_modules"],
    "include": [
        "src/**/*",
        "src/**/*.json",
        "scripts/**/*.cjs",
        ".eslintrc.cjs"
    ]
}
